			
<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
		
		<h2><%= page %> Evento</h2>
		
	</div>		<!-- .block_head ends -->
	
	<div class="block_content">
		
		<p class="breadcrumb"><a href="<%= events_url %>">Evento</a> &raquo; <strong><%= page %></strong></p>

		<%= form_for([@event], :html => { :multipart => true })  do |f| %>
		  <% if @event.errors.any? %>
		    <div class="message errormsg">
		      <p>Não foi possível salvar devido aos seguintes erros:</p>
		
		      <% @event.errors.full_messages.each do |msg| %>
		        <p><%= msg %></p>
		      <% end %>
		    </div>
		  <% end %>
		  
		    <p>
			  <%= f.label :name, "Nome" %><br />
		      <%= f.text_field :name, :class => "text small" %>
		    </p>
		    <%
		    if false
		    %>
		    <p>
  			  <%= f.label :event_type_id, "Tipo de evento" %><br />
  			  <%= f.select :event_type_id, @event_types, :prompt => "Selecione", :class => "styled" %>
  			</p>
		    <%
	      end
	      %>
		    <p>
		      <%= f.label :description, "Descrição" %><br />
		      <%= f.text_area :description, :class => "wysiwyg"  %>
		    </p>
		    
		    <p>
			    <%= f.label :telephone, "Telefone" %><br />
		      <%= f.text_field :telephone, :class => "text small" %>
		    </p>
		  
		    <p>
			  <%= f.label :state, "Estado" %><br />
		      <%= f.text_field :state, :class => "text small" %>
		    </p>  
		  
		    <p>
		      <%= f.label :city, "Cidade" %><br />
		      <%= f.text_field :city, :class => "text small"  %>
		    </p>
		
			<p>
		      <%= f.label :address, "Endereço" %><br />
		      <%= f.text_field :address, :class => "text small"  %>
		    </p>
		    
		    <p>
  		      <%= f.label :start_date, "Data de inicio" %><br />
  		      <%= f.datetime_select :start_date, :order => [:day, :month, :year, :hour, :minute]%>
  		    </p>
  		    
  		    <p>
    		      <%= f.label :end_date, "Data de encerramento" %><br />
    		      <%= f.datetime_select :end_date, :order => [:day, :month, :year, :hour, :minute]%>
    		    </p>
    		    
    		    <p class="fileupload"> 
      			  <%= f.label :map, "Mapa" %><br>
      			  <%= f.file_field :map, :class =>"file" %> 
      			</p>
      			
      			<p> 
      			  <%= f.label :twitter_hashtag, "Hashtag do evento (Twitter)" %><br>
      			  <%= f.text_field :twitter_hashtag, :class =>"text small" %> 
      			</p>
		    <p>
		      <%= f.submit page, :class => "submit small" %>
		    </p>
		<% end %>
		
	</div>		<!-- .block_content ends -->
	
	<div class="bendl"></div>
	<div class="bendr"></div>
		
</div>		<!-- .block ends -->