<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
		
		<h2>Visualizar Categoria</h2>
		
	</div>		<!-- .block_head ends -->
	
	<div class="block_content">
		<p>
		  <b>Name:</b>
		  <%= @place.name %>
		</p>

    <p>
		  <b>Imagem:</b>
		  <% if @place.image_file_name.blank? %>
		    Nenhuma imagem encontrada
		  <% else %>
		    <br>
		    <%= link_to image_tag(@place.image.url(:thumb)), @place.image.url(:original) %>
		  <% end %> 
		</p>
		
		<p>
      <a class="submit small" href="<%=event_places_url%>">Voltar</a>
    </p>

	</div>		<!-- .block_content ends -->

	<div class="bendl"></div>
	<div class="bendr"></div>

</div>		<!-- .block ends -->