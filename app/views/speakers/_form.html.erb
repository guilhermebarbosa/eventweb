
<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>

		<h2><%= page %> Palestrante</h2>

	</div>		<!-- .block_head ends -->

	<div class="block_content">

		<p class="breadcrumb"><a href="<%= event_speakers_url %>">Palestrante</a> &raquo; <strong><%= page %></strong></p>

		<% form_for([@event, @speaker], :html => { :multipart => true })  do |f| %>
		
		  <% if @speaker.errors.any? %>
		    <div class="message errormsg">
		      <p>Não foi possível salvar devido aos seguintes erros:</p>

		      <% @speaker.errors.full_messages.each do |msg| %>
		        <p><%= msg %></p>
		      <% end %>
		    </div>
		  <% end %>

		    <p>
			  <%= f.label :name, "Nome" %><br />
		      <%= f.text_field :name, :class => "text small" %>
		    </p>

		    <p>
		      <%= f.label :description, "Descrição" %><br />
		      <%= f.text_area :description, :class => "wysiwyg"  %>
		    </p>
		
			<p>
			  <%= f.label :email, "Email" %><br />
		      <%= f.text_field :email, :class => "text small" %>
		    </p>
		
			<p>
			  <%= f.label :twitter, "Twitter" %><br />
		      <%= f.text_field :twitter, :class => "text small" %>
		    </p>
		
			<p class="fileupload"> 
			  <%= f.label :image, "Imagem" %><br>
			  <%= f.file_field :image, :class =>"file" %> 
			</p>

		    <p>
		      <%= f.submit page, :class => "submit small" %>
		    </p>
		<% end %>

	</div>		<!-- .block_content ends -->

	<div class="bendl"></div>
	<div class="bendr"></div>

</div>		<!-- .block ends -->