<option value="">Selecione</option>
<% if !@sponsor_types.blank? %>
  <% @sponsor_types.each do |item| %>
    <% if item.name == @selected
      @opt_selected = "selected='selected'"
    else
      @opt_selected = ""
    end %>
    <option <%= @opt_selected %> value="<%= item.id %>"><%= item.name  %></option>
  <% end %>
<% end %>
