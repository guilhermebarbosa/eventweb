<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
		
		<h2>Visualizar Patrocinador</h2>
		
	</div>		<!-- .block_head ends -->
	
	<div class="block_content">
		<p>
		  <b>Nome:</b>
		  <%= @sponsor.name %>
		</p>

		<p>
		  <b>Descrição:</b>
		  <%= @sponsor.description.html_safe %>
		</p>

		<p>
		  <b>Patrocinador Tipo:</b>
		  <%= @sponsor.sponsor_type.name %>
		</p>
		
		<p>
		  <b>Site:</b>
		  <%= @sponsor.site %>
		</p>
		
		<p>
		  <b>Imagem:</b>
		  <% if @sponsor.image_file_name.blank? %>
		    Nenhuma imagem encontrada
		  <% else %>
		    <br>
		    <%= link_to image_tag(@sponsor.image.url(:thumb)), @sponsor.image.url(:original) %>
		  <% end %> 
		</p>
		
		<p>
      <a class="submit small" href="<%=event_sponsors_url%>">Voltar</a>
    </p>

	</div>		<!-- .block_content ends -->

	<div class="bendl"></div>
	<div class="bendr"></div>

</div>		<!-- .block ends -->